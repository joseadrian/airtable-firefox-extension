{

  "manifest_version": 2,
  "name": "Airtable webhook",
  "version": "1.0",

  "description": "Sends requests (modified) done by airtable in the background when a cell is updated, an item (image or relation) or row is added or removed.",

  "icons": {
    "96": "icons/default.png"
  },

  "content_scripts": [
    {
      "matches": ["https://airtable.com/*"],
      "js": ["airtable.js"]
    }
  ],

  "background": {
    "scripts": ["lib/axios.min.js", "background.js", "options/script.js"]
  },

  "options_ui": {
    "page": "options/index.html"
  },

  "permissions": [
    "https://airtable.com/v0.3/*",
    "webRequest",
    "webRequestBlocking",
    "storage"
  ],

  "browser_specific_settings": {
    "gecko": {
      "id": "joseadrian.dev@outlook.com"
    }
  }

}

















